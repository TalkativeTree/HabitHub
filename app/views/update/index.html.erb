<div id="calendar">
  <h4 id="month">
    <%= link_to "<", date: @date.prev_day %>
    <%= @date.stamp('Mon, 23 Oct 2013') %>
    <%= link_to ">", date: @date.next_day %>
  </h4>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Activity</th>
      <th>Time</th>
    </tr>
  </thead>
  <tbody>
    <%= render "no_updates" if @updates.empty? %>
    <% @updates.each do |update| %>
      <tr>
        <td><%= update.content %></td>
        <td><%= time_ago_in_words(update.created_at) %> ago</td>
      </tr>
    <% end %>
  </tbody>
</table>
